<h1>Category Details</h1>

<h3><%= category.name %></h3>

<hr>

<h4>Associated Posts</h4>

<% if (category.posts.length === 0) { %>
  <p>No posts associated with this category.</p>
<% } else { %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Post Title</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% category.posts.forEach(post => { %>
        <tr>
          <td><%= post.title %></td>
          <td>
            <!-- You can add more actions like edit or delete if needed -->
            <a href="/posts/<%= post.id %>" class="btn btn-info btn-sm">View</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

<a href="/categories" class="btn btn-secondary">Back to Categories</a>
