<!-- views/comments/show.ejs -->

<h1>Comment Details</h1>
<p><strong>Content:</strong>
  <%= comment.content %>
</p>
<p><strong>Created At:</strong>
  <%= comment.createdAt.toDateString() %>
</p>

<hr>

<!-- Modify Button -->
<a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Modify</a>

<!-- Delete Button with Confirmation -->
<form action="/comments/<%= comment.id %>/delete" method="POST" style="display: inline;" id="delete-comment-form">
  <button type="submit" class="btn btn-danger" onclick="return confirmDelete();">Delete</button>
</form>

<!-- Back Button -->
<a href="/comments" class="btn btn-secondary">Back to Comments</a>

<script>
  // Function to display a confirmation dialog
  function confirmDelete() {
    return window.confirm("Are you sure you want to delete this comment?");
  }
</script>
